@page
@using RazorPagesController.Pages.PlayGamePage
@using PlayerEngine
@model RazorPagesController.Pages.LoadGamePage.JoinGame

@{
    ViewData["Title"] = "JoinGame";
}

<div class="container content-center w-2/3 my-5">
    <p class="text-purple-400 font-semibold my-10 text-2xl">Choose your character:</p>
    <div class="grid grid-cols-3 place-content-evenly gap-6">
        @if (Model.Game.Players != null)
        {
            foreach (var player in Model.Game.Players)
            {
                if (player.PlayerType == EPlayertype.AI) continue;
                <div class="w-1/3"><a class="hover:bg-purple-400 text-purple-400 font-semibold max-w-md px-5 py-4 hover:px-10 hover:py-9 rounded-tl-lg rounded-br-lg hover:text-yellow-400 hover:text-xl hover:duration-300" asp-page="../PlayGamePage/Game" asp-route-GameidNew="@Model.Game.Id" asp-route-PlayerNameNew="@player.NickName">@player.NickName</a></div>
            }
        }
    </div>
</div>